{
  "name": "playwright-coverage-reporter",
  "version": "3.0.1",
  "type": "module",
  "description": "ðŸŽ¯ Native Playwright coverage reporter with runtime element discovery. Seamlessly integrates with your Playwright test suite to analyze UI element coverage, discover interactive elements during test execution, and generate comprehensive reports with Istanbul support.",
  "main": "dist/reporter.js",
  "types": "dist/reporter.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "npx playwright test tests/e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "COVERAGE_ENABLED=true npm run test:all",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e --project=e2e-chrome",
    "test:server": "node tests/test-server.js",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "postinstall": "lefthook install",
    "release": "npm run build && package-bump patch",
    "release:minor": "npm run build && package-bump minor",
    "release:major": "npm run build && package-bump major"
  },
  "keywords": [
    "playwright",
    "testing",
    "coverage",
    "e2e",
    "automation",
    "ui-testing",
    "element-coverage",
    "test-coverage",
    "istanbul",
    "lcov",
    "reporter",
    "typescript"
  ],
  "author": "Martin Page <m@rtin.page>",
  "license": "MIT",
  "dependencies": {
    "glob": "^10.3.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "peerDependenciesMeta": {
    "@playwright/test": {
      "optional": false
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cors": "^2.8.5",
    "eslint": "^8.54.0",
    "express": "^5.1.0",
    "jsdom": "^23.0.0",
    "lefthook": "^1.13.6",
    "package-bump": "^1.1.7",
    "serve": "^14.2.5",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DoomedRamen/playwright-coverage-reporter.git"
  },
  "bugs": {
    "url": "https://github.com/DoomedRamen/playwright-coverage-reporter/issues"
  },
  "homepage": "https://github.com/DoomedRamen/playwright-coverage-reporter#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
